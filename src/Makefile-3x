TARGET = pspbeeb
PSPSDK = $(shell psp-config --pspsdk-path)
PSPBIN = $(shell psp-config --psp-prefix)/bin
SDL_CONFIG = $(PSPBIN)/sdl-config
OBJS =  \
6502core.o \
atodconv.o \
avi.o \
beebmem.o \
beebsound.o \
beebwin.o \
cregistry.o \
disc1770.o \
disc8271.o \
econet.o \
functions.o \
log.o \
main.o \
psp_main.o \
sasi.o \
scsi.o \
sdl.o \
serial.o \
speech.o \
sysvia.o \
tube.o \
uef.o \
uefstate.o \
userkybd.o \
uservia.o \
via.o \
video.o \
windows.o \
psp_main.o  \
psp_sdl.o \
psp_run.o \
psp_font.o  \
psp_kbd.o \
psp_danzeff.o \
psp_menu.o \
psp_menu_help.o \
psp_menu_set.o \
psp_menu_kbd.o \
psp_battery.o \
psp_fmgr.o  \
psp_irkeyb.o 

PSP_EBOOT_ICON = icon0.png

DEFAULT_CFLAGS = $(shell $(SDL_CONFIG) --cflags)

PSP_FW_VERSION=303
PSPBEEB_VERSION=v1.1.0
MORE_CFLAGS=-O3 -Wall \
 -DPSPFW30X \
 -DUSE_PSP_IRKEYB \
 -DPSPBEEB_VERSION=\"$(PSPBEEB_VERSION)\" \
 -DNO_STDIO_REDIRECT

CFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS)
CXXFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS) -fno-exceptions -fno-rtti

LIBS = -lpspirkeyb -lstdc++ -lpsppower -lSDL_image -lSDL -lpng -ljpeg -lpspaudio -lpspgu -lpsphprm -lz -lm

BUILD_PRX=1

EXTRA_TARGETS   = EBOOT.PBP
PSP_EBOOT_TITLE = PSPBEEB-v$(PSPBEEB_VERSION)
PSP_EBOOT_ICON  = pspbeeb.png
PSP_EBOOT_PIC1 = pspbeeb-pic.png

include $(PSPSDK)/lib/build.mak

all: EBOOT.PBP

install: all
	@mkdir -p /media/usbdisk/psp/game371/pspbeeb/
	cp EBOOT.PBP /media/usbdisk/psp/game371/pspbeeb/

realclean:
	/bin/rm -f $(OBJS) EBOOT.PBP PARAM.SFO

